rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /bookings/{docId} {
      // любой может создать запись (пользователи без регистрации)
      allow create: if true;

      // ВРЕМЕННО: разрешить чтение (чтобы админка работала без Auth)
      // Это менее безопасно — после проверки верните чтение под защиту
      allow read: if true;

      // обновление/удаление — временно разрешаем для быстрого тестирования
      // ВНИМАНИЕ: небезопасно — это даёт возможность любому клиенту менять и удалять записи.
      // Уберите эту строку и верните проверку на request.auth после проверки.
      allow update, delete: if true;
    }

    // по умолчанию всё запрещено
    match /{document=**} {
      allow read, write: if false;
    }
  }
}